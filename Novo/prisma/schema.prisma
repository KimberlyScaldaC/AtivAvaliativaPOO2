// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//-------------------------------------------------------------

// AQUI VAI FICAR A PARTE DO BANCO DE DADOS

model Aluno {
  id        String @id @unique
  matricula Int    @unique
  email     String @unique
  nome      String
}

model Professor {
  matricula Int @id @unique
  email String @unique
  nome String
  idade Int

}

model AlunoAvaliacao {
  idAluno Int @id @default(autoincrement())
  avaliacao1 Avaliacao @relation(fields: [avaliacaoId1], references: [idAvaliacao], name: "avaliacao1")
  avaliacaoId1 Int
  avaliacao2 Avaliacao @relation(fields: [avaliacaoId2], references: [idAvaliacao], name: "avaliacao2")
  avaliacaoId2 Int 
  matriculaAluno Int
  avaliacaoAluno Int
}

model ProfessorAvaliacao {
  idProfessor Int @id @default(autoincrement())
  avaliacao1 Avaliacao @relation(fields: [avaliacaoId1], references: [idAvaliacao], name: "avaliacao1")
  avaliacaoId1 Int
  avaliacao2 Avaliacao @relation(fields: [avaliacaoId2], references: [idAvaliacao], name: "avaliacao2")
  avaliacaoId2 Int 
  matriculaProfessor Int
  avaliacaoProfessor Int
}

model Avaliacao {
  idAvaliacao Int @id @unique @default(autoincrement())
  idEstande Int
  avaliacaoAlunos AlunoAvaliacao[] @relation("avaliacao1")
  matriculaAlunos AlunoAvaliacao[] @relation("avaliacao2")
  avaliacaoProfessores ProfessorAvaliacao[] @relation("avaliacao1")
  matriculaProfessores ProfessorAvaliacao[] @relation("avaliacao2")
}

model Estande {
  idEstande Int @id @default(autoincrement())
  integrantes Int  //FAZER UMA LIGACAO NA CLASSE ALUNO PARA PEGA SUA MATRICULA
  matriculaLider Int @unique
  numeroEstande Int
  nomeGrupo String
  dataApresentacao DateTime
  horaApresentacao DateTime
  notaGrupoProfessores Float
  notaGrupoAlunos Float
}

//-------------------------------------------------------------

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int
}

